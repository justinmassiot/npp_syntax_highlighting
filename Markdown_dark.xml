<!-- Author: Justin MASSIOT (https://github.com/justinmassiot/) -->
<!-- Inspired by https://github.com/Edditoria/markdown-plus-plus/ -->

<NotepadPlus>
    <UserLang name="Markdown (dark theme)" ext="md markdown" udlVersion="2.1">
        <Settings>
            <Global caseIgnored="yes" allowFoldOfComments="no" foldCompact="no" forcePureLC="2" decimalSeparator="2" /><!-- forcePureLC="2" => needed to bypass a bug with lines starting with a single '#' -->
                                                                                                                       <!-- decimalSeparator="2" => use both '.'and ',' as decimal separators -->
            <Prefix Keywords1="yes" Keywords2="yes" Keywords3="no" Keywords4="no" Keywords5="no" Keywords6="no" Keywords7="no" Keywords8="no" />
        </Settings>
        <KeywordLists>
            <Keywords name="Comments">00# 01 02((EOL)) 03&lt;!-- 04--&gt;</Keywords><!-- line comments = head titles -->
            <Keywords name="Numbers, prefix1"></Keywords>
            <Keywords name="Numbers, prefix2"></Keywords>
            <Keywords name="Numbers, extras1"></Keywords>
            <Keywords name="Numbers, extras2"></Keywords>
            <Keywords name="Numbers, suffix1">.</Keywords>
            <Keywords name="Numbers, suffix2"></Keywords>
            <Keywords name="Numbers, range"></Keywords>
            <Keywords name="Operators1">{ } [ ] ( ) :|: |: :| | \</Keywords>
            <Keywords name="Operators2">+ - &gt;</Keywords><!-- operators which need a surrounding space -->
            <Keywords name="Folders in code1, open"></Keywords>
            <Keywords name="Folders in code1, middle"></Keywords>
            <Keywords name="Folders in code1, close"></Keywords>
            <Keywords name="Folders in code2, open"></Keywords>
            <Keywords name="Folders in code2, middle"></Keywords>
            <Keywords name="Folders in code2, close"></Keywords>
            <Keywords name="Folders in comment, open"></Keywords>
            <Keywords name="Folders in comment, middle"></Keywords>
            <Keywords name="Folders in comment, close"></Keywords>
            <Keywords name="Keywords1">--- ===</Keywords>
            <Keywords name="Keywords2">http:// https://</Keywords>
            <Keywords name="Keywords3"></Keywords>
            <Keywords name="Keywords4"></Keywords>
            <Keywords name="Keywords5"></Keywords>
            <Keywords name="Keywords6"></Keywords>
            <Keywords name="Keywords7"></Keywords>
            <Keywords name="Keywords8"></Keywords>
            <Keywords name="Delimiters">
              00*** 00___ 01\ 02((EOL ***)) 02((EOL ___))
              03** 03__ 04\ 05((EOL **)) 05((EOL __))
              06* 06_ 07\ 08((EOL *)) 08((EOL _))
              09[ 09![ 10\ 11] 11]
              12``` 12` 13\ 14``` 14((EOL `))
              15~~ 16\ 17~~ 
              18 19 20 
              21 22 23 
            </Keywords><!-- delimiters 1 to 8 -->
        </KeywordLists>
        <Styles>
            <WordsStyle name="DEFAULT"            fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="COMMENTS"           fgColor="7F9F7F" bgColor="000000" colorStyle="1" fontName="" fontStyle="0" nesting="0" /><!-- standard comments (color from Zenburn "COMMENT") -->
            <WordsStyle name="LINE COMMENTS"      fgColor="CB4B16" bgColor="000000" colorStyle="1" fontName="" fontStyle="1" nesting="0" /><!-- line comments = head titles -->
            <WordsStyle name="NUMBERS"            fgColor="8CD0D3" bgColor="000000" colorStyle="1" fontName="" fontStyle="0" nesting="0" /><!-- numbers and ordered list indexes (color from Zenburn "NUMBER") -->
            <WordsStyle name="KEYWORDS1"          fgColor="CB4B16" bgColor="000000" colorStyle="1" fontName="" fontStyle="0" nesting="0" /><!-- horizontal rules -->
            <WordsStyle name="KEYWORDS2"          fgColor="CEDF99" bgColor="000000" colorStyle="1" fontName="" fontStyle="0" nesting="0" /><!-- URLs (color from Zenburn special keywords) -->
            <WordsStyle name="KEYWORDS3"          fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="KEYWORDS4"          fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="KEYWORDS5"          fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="KEYWORDS6"          fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="KEYWORDS7"          fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="KEYWORDS8"          fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="OPERATORS"          fgColor="DCA3A3" bgColor="000000" colorStyle="1" fontName="" fontStyle="1" nesting="0" /><!-- operators (color from Zenburn "OPERATOR") -->
            <WordsStyle name="FOLDER IN CODE1"    fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="FOLDER IN CODE2"    fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="FOLDER IN COMMENT"  fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="DELIMITERS1"        fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="3" nesting="0" /><!-- italic + bold -->
            <WordsStyle name="DELIMITERS2"        fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="1" nesting="4" /><!-- bold, "nestable" inside italic -->
            <WordsStyle name="DELIMITERS3"        fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="2" nesting="2" /><!-- italic, "nestable" inside bold -->
            <WordsStyle name="DELIMITERS4"        fgColor="CEDF99" bgColor="000000" colorStyle="1" fontName="" fontStyle="0" nesting="0" /><!-- links and images (color from Zenburn special keywords) -->
            <WordsStyle name="DELIMITERS5"        fgColor="FFCFAF" bgColor="000000" colorStyle="1" fontName="" fontStyle="0" nesting="0" /><!-- code (color from Zenburn "PREPROCESSOR") -->
            <WordsStyle name="DELIMITERS6"        fgColor="808080" bgColor="000000" colorStyle="1" fontName="" fontStyle="0" nesting="0" /><!-- strikethrough text -->
            <WordsStyle name="DELIMITERS7"        fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
            <WordsStyle name="DELIMITERS8"        fgColor="000000" bgColor="000000" colorStyle="0" fontName="" fontStyle="0" nesting="0" />
        </Styles>
    </UserLang>
</NotepadPlus>
